pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'I am in Build Phase'
            }
        }
        
        stage('Test') {
            steps {
                echo 'I am in Test Phase'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'I am in Deploy Phase'
            }
        }
        
    }
        
        
        post 
       {
       always
       {
       slackSend channel: 'jenkins-slack-intakshay', color: 'green', message: " success message from jenkins declarative pipeline ALSO  ${env.JOB_NAME} ${env.BUILD_NUMBER} ${env.BUILD_URL} "
        }
        }
   
}
